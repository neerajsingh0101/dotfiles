#!/bin/bash
#
# List all repositories for a given GitHub organization.
#
# Usage: glist-all-repos <org-name>
#
# Example: glist-all-repos neerajsingh0101

if [ -z "$1" ]; then
  echo "Error: Organization name is required"
  echo "Usage: $0 <org-name>"
  echo "Example: $0 neerajsingh0101"
  exit 1
fi

ORG="$1"

gh repo list "$ORG" --limit 1000 --json name --jq '.[].name'

if [ $? -ne 0 ]; then
  echo "Failed to list repositories for $ORG"
  exit 1
fi
